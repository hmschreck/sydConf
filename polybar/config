[module/player]
type = custom/script
exec = $HOME/.config/polybar/player
interval = 1

format = <label>
label = %output%

click-left = playerctl -p $(cat $HOME/.player) play-pause
click-right = exec $HOME/.config/polybar/toggleplayer
scroll-up = playerctl -p $(cat $HOME/.player) volume 0.05+
scroll-down = playerctl -p $(cat $HOME/.player) volume 0.05-

[module/updates]
